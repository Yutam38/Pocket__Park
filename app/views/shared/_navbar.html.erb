      <%= image_tag "logo.svg", alt: "Pocket Park logo", width: "150px"%>
    </a>

    <ul class="d-flex list-unstyled mb-0 flex-wrap gap-2">
      <% if user_signed_in? %>
        <li class="mx flex-grow-1">
          <%= link_to "Parks", parks_path, class: "pages text-decoration-none #{'active' if current_page?(parks_path)}", title: "Parks homepage" %>
        </li>

        <li class="mx flex-grow-1">
          <%= link_to favourites_path, class: "pages text-decoration-none #{'active' if current_page?('/about.html')}", title: "Favorited parks" do %>
