<h1  class="text-center my-4">My Bookings</h1>

<% @bookings.each do |booking| %>
<div class="booking-card d-flex justify-content-between align-items-center p-3 border rounded shadow-sm mx-5">
    <div class="booking-info">
      <strong class="park-name"><%= link_to booking.timeslot.park.name, park_path(booking.timeslot.park), class: "black-link" %></strong><br>
      <span class="booking-date"><%= booking.timeslot.start_time.strftime("%A, %B %d, %Y") %></span><br>
      <span class="booking-time">
        ⏰ <%= booking.timeslot.start_time.strftime("%H:%M") %> ~ <%= booking.timeslot.end_time.strftime("%H:%M") %>
      </span>
    </div>

    <div class="delete-button">
      <%= button_to "❌ Cancel", booking_path(booking),
            method: :delete,
            data: { turbo_confirm: "Are you sure?" },
            class: "btn btn-outline-danger btn-sm" %>
    </div>
  </div>
<% end %>

<%= link_to 'Back to Parks', parks_path, class: "mx-5 d-block mt-3" %>
